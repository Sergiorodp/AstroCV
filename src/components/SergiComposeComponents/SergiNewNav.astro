<style lang="scss">

    .nav-main-container{
        position: fixed;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 95%;
        height: 15vh;
    }

    .nav-item{
        margin-right: 1rem;
        --primary-button-color: none;   
        --font-button-color: white;
        --primary-button-color-hover: white;
        --font-button-color-hover: var(--secondary-light-color);
    }

    .nav-content-conatiner{
        width: 80%;
        display: grid;
        grid-template-columns: 10% 90%;
        h1{
            justify-content: flex-start;
        }
        ul{
            align-items: center;
            display: flex;
            justify-self: flex-end;
            list-style: none;
            font-size: 1rem;
            font-weight: 700;
            
            li{
                color: var(--white-font-color);
            }
        }
    }
</style>