---
import SergiSubTittleText from "./SergiSubTittleText.astro";

---

<div class="container">
    <SergiSubTittleText>
       <slot name="section-header"> <h2>section-header-h2</h2></slot>
    </SergiSubTittleText>
    <slot name="section-tittle"><h3>section-tittle-h3</h3></slot>
    <slot name="section-subtittle"><h4>section-subtittle-h4</h4></slot>
</div>

<style lang="scss">

        .container{
            --subtittle-line-color: var(--secondary-light-color, white);
        }

        h2{
            color: var(--secondary-light-color, white);
        }
        h3{
            color: white;
            font-size: 2.5rem;
        }
        h4{
            font-size: 1.5rem;
            color: var(--secondary-light-color, white);
        }
</style>