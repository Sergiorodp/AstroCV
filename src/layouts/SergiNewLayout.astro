--- 
import "@fontsource/open-sans/600.css";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel='stylesheet' href='https://cdn-uicons.flaticon.com/uicons-regular-straight/css/uicons-regular-straight.css'>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
        <div class="main-panel">
            <section class="static-links">
                <slot name="static-links-slot"></slot>
            </section>
            <section id='dinamicPage' class="dinamyc-page"> 
                <section class="nav-layout-container">
                    <slot class="header" name="header-slot"/>
                </section> 
                <section class="content">
                    <slot/>
                </section>
            </section>
            <slot name="footer"></slot>
        </div>
	</body>
</html>


<style is:global lang="scss">
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);

        --primary-light-background-color: #f6f6f6;
        --secondary-light-color: #6D77F5;
        --secondary-light-color-hover: #6D77F5BB;
        --white-font-color: #ffffff;

        --nav-bar-height : 4rem;
	}

	html {
		font-family: -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;
		background: var(--primary-light-background-color);
		background-size: 224px;
        scroll-behavior: smooth;
	}

    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .main-panel{
        display: grid;
        width: 100%;
        grid-template-columns: 5% 95%;
    }

    .static-links{
        background: black;
    }

    body{
        background: var(--secondary-light-color);
    }

    .dinamyc-page{
        justify-self: center;
    }

    @media (max-width: 992px) {
        .main-panel{
            display: contents;

            .static-links{
                display: none;
            }
        }
    }

</style>